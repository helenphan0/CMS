        meta(charset='utf-8')
        link(rel='stylesheet', type='text/css', href='/public/default/default-style.css')
        link(href='https://fonts.googleapis.com/css?family=Merriweather|Ubuntu:400,700' rel='stylesheet')
    body
        section(id='nav')
            a(class='nav-link', href= '/home' )
                div(class='nav-link') Home
            a(class='nav-link', href='/about')
                div(class='nav-link') About
            a(class='nav-link', href='/portfolio')
                div(class='nav-link') Portfolio
            a(class='nav-link')
                div(class='nav-link') Contact
