.project-list

div(class='filter')
    p(class='filter-title') View Projects by Skill
    select(id='skills-selector', value='')
        option(value='') Skills
        each skill in skills
            option(value= skill)= skill     
            
div(id='results')

div(class='template hidden')
    div(class='project-item')
        div(class='img-box')
            img(class='project-image' )
        p(class='project-name')
        p(class='links')
            a(class='proj-livelink', target='_blank')
                span Live Link
            span  |  
            a(class='proj-codelink', target='_blank')
                span Code Link
        div(class='skill-box')
        hr(class='desc-bar')
        p(class='project-description')
